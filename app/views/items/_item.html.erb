
<div class="box col-md-4" id="item_<%= item.id %>">
    <div class="panel panel-default text-center">
  <div class="panel-heading">Mantis: <%= item.mantis %> - Processo: <%= item.numProcesso %></div>
    <div class="panel-body">

        <div align="left">
        <p><b>Relator:</b> <%= item.client.nome %></p>
        <p><b>Servidor:</b><%= item.nomeServidor %></p>
        <p><b>Migrado? </b><%= formata_SimNao(item.migrado)%></p>
        <p>       <textarea class="form-control" rows="3" cols="100" name="operacao" readonly="true"><%= item.operacao %>
           </textarea></p>
        </div>
            <p><button type="button" class="btn btn-xs btn-warning" data-toggle="modal" data-target="#myEditItem_<%= item.id %>">
                     Editar</button>
            <%= link_to "Destroy", [item.office, item],
                 method: :delete,
                 data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger", remote: true %></p>
      </div>
  </div>
<!-- inicio formulario com modal para inclusao de novos dados -->
<%= simple_form_for([item.office, item], :method => :put, remote: true ) do |f| %>

  <div class="modal fade" id="myEditItem_<%= item.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Items - Editar Items</h4>
      </div>


      <div class="modal-body">
        <%= f.error_notification %>
        <%= f.hidden_field :office_id, :value => item.office.id %>
        <div class="form-group">
            <label for="item_client_id" class="control-label">Relator:</label>
            <%= f.collection_select(:client_id, Client.all, :id, :nome, {prompt: "Selecione o relator"}, {class: "form-control"} )%>
        </div>

          <div class="form-group">
           <label for="item_mantis" class="control-label">Mantis:</label>
            <%= f.input :mantis, label: false, id: "item_mantis",class: "form-control"%>
          </div>
          <div class="form-group">
           <label for="item_numProcesso" class="control-label">Número Processo:</label>
            <%= f.input :numProcesso, label: false, id: "item_numProcesso", class: "form-control" %>
          </div>
          <div class="form-group">
           <label for="item_nomeServidor" class="control-label">Nome Servidor:</label>
            <%= f.input :nomeServidor, label: false, id: "item_nomeServidor", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :migrado, "* Processo Migrado?  " %>
            <%= f.radio_button :migrado, true %>
            <%= f.label :migrado_desc, "Sim" %>
            <%= f.radio_button :migrado, false %>
            <%= f.label :migrado_desc, "Não" %>
          </div>
          <div class="form-group">
           <label for="item_operacao" class="control-label">Descrição:</label>
             <%= f.input :operacao, label: false,id: "item_operacao", class: "form-control item_operacao", :input_html => {:rows => 3 } %>
          </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <%= f.button :submit, "Salvar", class: "btn btn-primary" %>
      </div>

    </div>
  </div>
</div>

<% end %>
</div>


